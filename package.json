  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grantila/short-tree/issues"
  },
  "homepage": "https://github.com/grantila/short-tree#readme",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
